    <div class="logo-search">
      <a href="/" class="logo"><img src="/imgs/WK.png" alt="wk logo" /></a>
      <div class="search-bar">
        <input
          type="text"
          placeholder="Search articles..."
          aria-label="Search articles"
          id="searchInput"
        />
        <button
          type="button"
          class="clear-btn"
          aria-label="Clear"
          onclick="clearSearch()"
        >
