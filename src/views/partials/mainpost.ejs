<section class="mainpost">
  <div class="post-cover">
    <% if (post.coverImage) { %>
    <img src="<%= post.coverImage %>" alt="Cover image for <%= post.title %>" />
    <% } %>
  </div>
  <div class="post-header">
    <h1 class="post-title"><%= post.title %></h1>
    <div class="post-meta">
      <span class="author"
        >By
        <a href="/user/<%= post.author.id %>"
          ><%= post.author.username %></a
        ></span
      >
      <span class="date"
        >Published on <%= new Date(post.createdAt).toLocaleDateString() %></span
      >
    </div>
  </div>
  <div class="post-content"><%- post.content %></div>
</section>
