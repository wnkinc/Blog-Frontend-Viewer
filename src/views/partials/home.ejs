<div class="feed">
  <% posts.forEach(post => { %>
  <section class="mainpost feed-post">
    <a href="/post/<%= post.slug %>" class="post-link">
      <div class="post-cover">
        <% if (post.coverImage) { %>
        <img
          src="<%= post.coverImage %>"
          alt="Cover image for <%= post.title %>"
        />
        <% } %>
      </div>
    </a>

    <a href="/post/<%= post.slug %>" class="post-link"></a>
    <div class="post-header">
      <!-- Profile section -->
      <div class="post-author">
        <img
          src="<%= post.author.profilePicUrl || '/default-profile.png' %>"
          alt="<%= post.author.username %>'s profile picture"
          class="profile-pic"
        />
        <div class="author-info">
          <span class="author-name">
            <a href="/user/<%= post.author.id %>"
              ><%= post.author.username %></a
            >
          </span>
          <span class="post-date">
            <%= new Date(post.createdAt).toLocaleDateString() %>
          </span>
        </div>
      </div>

      <h2 class="post-title">
        <a href="/post/<%= post.slug %>"><%= post.title %></a>
      </h2>
    </div>
  </a>

    <!-- New actions area -->
    <div class="post-actions">
      <!-- Reaction Link -->
      <a href="/post/<%= post.slug %>#reactions" class="reaction-link">
        <span class="emoji">‚ù§Ô∏è</span>
        <span class="count"><%= post.reactionsCount || 0 %></span>
        <span class="label">Reactions</span>
      </a>

      <!-- Comment Link -->
      <a href="/post/<%= post.slug %>#comments" class="comment-link">
        <span class="emoji">üí¨</span>
        <span class="count"><%= post.comments.length %></span>
        <span class="label">Comments</span>
      </a>
    </div>
  </section>
  <% }); %>
</div>
